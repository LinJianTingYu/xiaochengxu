/* components/comfirm/comfirm.wxss */
.mask{
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  background: rgba(40,40,40,.5)
}
.confirm-wrapper{
  bottom: 0;
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  width: 100%;
  z-index: 999;
}
.post-header {
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
  border-top: 1px solid #f5f5f5;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 34rpx;
}

/* .post-header > text:first-child {
  font-size: 28rpx;
  color: #bbb;
} */
.comf{
  color: #666;
}
.cancel {
  color: #666;
}

.post-header text {
  padding: 25rpx;
}
.comment-wrapper{
  font-size: 32rpx;
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.comment-item{
  padding: 0 16rpx;
  line-height: 56rpx;
  border-radius: 10rpx;
  background: rgb(247,247,247);
  margin: 10rpx;
  font-size: 28rpx;
}
.comment-item:nth-child(1){
  background: rgb(255,250,221);
}
.comment-item:nth-child(2){
  background: rgb(239,250,254);
}
.comment-content{
  color: rgb(100,100,100);
  font-size: 30rpx;
  margin-right: 10rpx;
}
.comment-nums{
  font-size: 28rpx;
  color: rgb(180,180,180);
}
.post{
  width: 690rpx;
  margin: 30rpx auto;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 15px;
  padding-left: 25rpx;
  font-size: 30rpx;
}