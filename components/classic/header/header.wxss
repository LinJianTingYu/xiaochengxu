.header{
  display: flex;
  height: 100rpx;
  align-items: center;
  padding: 0 30rpx;
  border-top: 1rpx solid #f3f3f3;
  border-bottom: 1rpx solid #f3f3f3;
}
.num{
}
.num:after{
  content: "";
  width: 10rpx;
  height: 60rpx;
  background: black;
}
.title{
  font-size: 35rpx;
}
.number{
  font-size: 60rpx;
}
.border{
  height: 50rpx;
  width: 5rpx;
  background: rgba(0, 0, 0, .6);
  margin: 0 15rpx;
}
.data{
  display: flex;
  flex-direction: column;
  text-align: left;
  flex: 1;
}
.month{
  font-size: 26rpx;
  font-weight: 550;
}
.year{
  font-size: 26rpx;
}
.favorite{
  margin: 0 10rpx;
}
.favorite-icon{
  width: 35rpx;
  height: 35rpx;
}
.favorite-num{
  position: relative;
  font-size: 26rpx;
  color: rgb(197, 197, 197);
  top: -15rpx;
  left: 5rpx;
}
.share{
  width: 45rpx;
  height: 45rpx;
}
.share image{
  width: 45rpx;
  height: 45rpx;
}
