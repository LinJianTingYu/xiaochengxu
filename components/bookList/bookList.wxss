/* components/bookList/bookList.wxss */
.book-list-wrapper{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  margin: 0 2%;
}
.book-list-item{
  width: 35%;
  margin: 30rpx 6%;
  position: relative;
  box-shadow: 2rpx 2rpx 5rpx rgb(200,200,200);
}
.bppk-face{
  width: 250rpx;
  height: 350rpx;
}
.desc{
  display: flex;
  flex-direction: column; 
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 35%;
  background: white;
  padding: 10rpx;
  box-sizing: border-box;
}
.book-title{
  font-size: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
  line-height: 33rpx;
}
.book-author{
  font-size: 24rpx;
  color: rgb(169,169,169);
  white-space: nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
  line-height: 33rpx;
}
.book-fav{
  font-size: 26rpx;
  color: rgb(140,140,140);
  text-align: right;
  margin-top: 10rpx;
  line-height: 33rpx;
}