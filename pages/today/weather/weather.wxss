/* pages/today/weather/weather.wxss */
.weather {
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100vw;
  z-index: 2;
  background: white;
}
  .bgImg {
    position: absolute;
    width: 100vw;
    top: 80rpx;
    bottom: 0;
    filter: blur(40px);
  }
    .bgImg image {
      width: 100%;
      height: 100%;
    }
  .hours_box {
    width: 100vw;
    overflow: hidden;
  }
    .hours_wrapper {
      overflow: hidden;
      width: 1000rpx;
      padding: 10rpx 0;
      border-top: 1px solid rgb(240, 240, 240);
    }
      .hours_item {
        text-align: center;
        font-size: 24rpx;
        width: 120rpx;
        float: left;
        display: flex;
        flex-direction: column;
        line-height: 45rpx;
      }
  .scroll_view {
    color: black;
    position: absolute;
    top: 0;
    bottom: 0;
    overflow: hidden;
  }
    .today {
      padding: 20rpx 0;
      text-align: center;
    }
      .today .temperature {
      text-align: center;
        font-size: 50rpx;
      }
      .temperatures {
        margin: 15rpx 0 20rpx;
        font-size: 30rpx;
      }
      .weather_desc {
        font-size: 28rpx;
      }
    .future {
      padding: 0 20rpx 20rpx;
      box-sizing: border-box;
      width: 100vw;
    }
      .future_item {
        width: 100%;
        display: flex;
        font-size: 30rpx;
        justify-content: space-between;
        align-items: center;
        padding: 10rpx 0;
        border-top: 1px solid rgba(245, 245, 245, 0.4);
      }
        .date {
          width: 240rpx;
          font-size: 30rpx;
        }
        .future_item image {
          width: 90rpx;
          height: 60rpx;
        }
        .future_item .temperature {
          width: 240rpx;
          text-align: right;
        }
        .list {
          padding: 0 10rpx;
        }
        .list .title {
          font-size: 32rpx;
          margin: 20rpx 0 10rpx;
        }
        .list .air_info {
          font-size: 28rpx;
          display: flex;
          align-items: center;
          justify-content: space-between;
        }
        .list .iconfont {
          font-size: 100rpx;
          color: lightgreen;
        }
        .list .air_leave {
          flex: 1;
          font-size: 40rpx;
          text-align: center;
        }
        .list .air_tips {
          width: 490rpx;
        }
  .tips {
    overflow: hidden;
  }
  .tips>.title {
    font-size: 32rpx;
    margin-top: 10rpx;
    padding: 0 10rpx;
  }
  .tip_item {
    float: left;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-items: center;
    width: 33.3vw;
    padding: 10rpx;
    box-sizing: border-box;
  }
  .tip_item .iconfont{
    font-size: 70rpx;
  }
  .tip_item .level{
    font-size: 36rpx;
  }
  .tip_item .title{
    font-size: 30rpx;
  }
