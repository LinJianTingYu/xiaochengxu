  .header {
    padding: 0 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    background: #fbf9f1;
    color: black;
  }
    .weather {
      display: flex;
      align-items: center;
      height: 80rpx;
      font-size: 40rpx;
    }
      .weather image {
        width: 100rpx;
        height: 70rpx;
      }
      .info {
        margin-left: 0.1rpx;
      }
        .temperature {
          font-size: 34rpx;
          line-height: 50rpx;
        }
        .temperatures {
          font-size: 26rpx;
        }
    .laohuangli {
      font-size: 32rpx;
      width: 300rpx;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
      .laohuangli>view {
        text-overflow: ellipsis;
        line-height: 40rpx;
      }
      .ji {
        display: flex;
      }
      .ji .info {
        width: 200rpx;
        overflow: hidden;
        white-space: nowrap;
      }
      .yi {
        display: flex;
        margin-bottom: 4rpx; 
      }
  .bgImg {
    position: absolute;
    width: 100vw;
    top: 100rpx;
    bottom: 0;
    filter: blur(20px);
  }
    .bgImg image {
      width: 100%;
      height: 100%;
    }
  .histoies_wrapper {
    position: absolute;
    top: 100rpx;
    bottom: 0;
    overflow: hidden;
  }
    .histoies_box {
      padding: 0 20rpx;
    }
      .history_item {
        font-size: 28rpx;
        padding: 10rpx 0;
      }
        text {
          display: inline-block;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
        }
        .time {
          width: 20%;
        }
        .title {
          width: 75%;
        }
        .yi text:not(.title) {
          flex:1;
        }
        .yi .title {
          width: 38rpx;
          height: 38rpx;
          display: inline-block;border-radius: 50%;
          border: 1rpx solid #08a942;
          color: #08a942;
          text-align: center;
          line-height: 38rpx;
          font-size: 24rpx;
          margin-right: 10rpx;
        }
        .ji .title {
          width: 38rpx;
          height: 38rpx;
          display: inline-block;border-radius: 50%;
          border: 1rpx solid #e35c57;
          color: #e35c57;
          text-align: center;
          line-height: 38rpx;
          font-size: 24rpx;
          margin-right: 10rpx;
        }