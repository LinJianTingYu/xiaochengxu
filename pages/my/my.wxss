/* pages/my/my.wxss */
.header{
  height:574rpx;
  position: relative;
}
.bg{
  width:100%;
  height:574rpx;
}
button{
  padding: 0 !important;
  border: none !important;
  width:120rpx !important;
  height:120rpx !important;
  border-radius: 50% !important;
}
button image{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
}
.avatar-container{
  position: absolute;
  top: 59%;
  left: 50%;
  transform: translate(-50%,-50%);
  display: flex;
  flex-direction: column; 
  justify-content: center;
  text-align: center;
}
.user-icon{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
}
.about-container{
  padding: 0 100rpx;
  width:550rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position:absolute;
  top:440rpx;
}

.about-us image{
  width:34rpx;
  height:34rpx;
}
.preview-container{
  margin-top:30rpx;
  display: flex;
  flex-direction: row;
  padding:0 30rpx;
  flex-wrap: wrap;
  justify-content: space-between;
}

.preview{
  margin-bottom: 30rpx;
}
.about-us{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  
}

.book-num{
  font-size:36rpx;
  color:#000000;
}

.description{
  font-size:26rpx;
  color:#999999;
  margin-top: 15rpx; 
}

.about-container > view:nth-child(2){
  margin-top: -5rpx;
}
.my-wrapper{
  background: #f5f5f5;
  padding-top: 30rpx;
}
.title{
  text-align: center;
}
.title .headline{
  width: 120rpx;
  height: 50rpx;
}
.content{
  /* display: flex;
  justify-content: center;
  flex-wrap: wrap; */
  overflow: hidden;
}
.content-item{
  width: 43%;
  margin-left: 4%;
  margin-bottom: 30rpx;
  float: left;
  background: white;
  text-align: center;
  padding-bottom:30rpx;
}
.content-item-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 20rpx;
}
.tag{
  background: #f8f8f8;
  display: inline-block;
  padding:6rpx 20rpx;
  font-size:30rpx;
}

.music-img{
  border-radius: 50%;
  width:240rpx;
  height:240rpx;
  margin: 0 auto;
}
.other-img{
  width: 100%;
  height:240rpx;
}

.text{
  line-height: 45rpx;
  height: 90rpx;
  color: #999;
  margin: 30rpx 20rpx;
  font-size:26rpx;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}