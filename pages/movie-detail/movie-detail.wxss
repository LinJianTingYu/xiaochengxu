  .bgImg {
    position: absolute;
    width: 100vw;
    top: 0;
    bottom: 0;
    filter: blur(20px);
  }

  .bgImg > image {
    width: 100%;
    height: 100%;
  }
  .content {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100vw;
    text-align: center;
    box-sizing: border-box;
    overflow: hidden;
    background: rgba(0, 0, 0, 0.5);
    color: white;
  }
  .content image {
      width: 75vw;
      height: 105vw;
    }
.movie_info {
      padding: 0 40rpx 0;
    }
    
      .movie_info .title {
        font-size: 34rpx;
        font-weight: 550;
        margin: 5px 0 10px;
      }
     .movie_info .info {
        font-size: 22rpx;
        text-align: left;
        line-height: 28rpx;
        margin: 8rpx 0;
      }
      
       .movie_info .tag_item {
          display: inline-block;
          margin: 0 2px;
        }
    .trailers {
      text-align: left;
      box-sizing: border-box;
      padding: 0 40rpx 0;
    }
      .trailers_box {
        box-sizing: border-box;
        overflow: hidden;
      }
      .trailers_wrapper {
        height: 270rpx;
        width: 1600rpx;
      }
        .trailers_item {
          float: left;
          width: 400rpx;
          height: 270rpx;
          position: relative;
        }
    .label {
      font-size: 34rpx;
      font-weight: 550;
      margin: 20px 0 5px;
    }
          .iconfont {
            position: absolute;
            color: rgba(255, 255, 255, 0.8);
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 80rpx;
          }
          .trailers_item image {
            width: 100%;
            height: 100%;
          }
    .desc {
      text-align: left;
      padding: 0 40rpx 0;
    }
      .desc .text {
        font-size: 24rpx;
        line-height: 35rpx;
        text-indent: 50rpx;
      }
    .comments {
      margin: 20rpx 40rpx 0;
      text-align: left;
      border-radius: 10px;
    }
      .comments .label {
        margin: 10px 0 5px;
      }
      .comment_item {
        padding: 10px 0;
        border-bottom: 1px solid gray;
      }
        .comment_item:last-child {
          border-bottom: none;
        }
        .user_info {
          display: flex;
        }
          .user_info image {
            width: 60rpx;
            height: 60rpx;
            border-radius: 50%;
          }
          .info {
            margin-left: 10px;
          }
            .name {
              font-size: 28rpx;
            }
            .rate {
              margin-top: 2px;
              font-size: 24rpx;
            }
        .txt {
          margin-top: 10rpx;
          font-size: 24rpx;
          text-indent: 55rpx;
          line-height: 38rpx;
        }