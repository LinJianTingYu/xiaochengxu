/* pages/detail/detail.wxss */
.detail{
  
}
.detail-scroll{
  position: absolute;
  top: 0;
  bottom: 102rpx;
  width: 100%;
}
.detail-wrapper{
  background: rgb(245, 245, 245);
}
.header{
  margin-bottom: 30rpx; 
  background: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  padding: 30rpx;
}
.book-face image{
  width: 190rpx;
  height: 270rpx;
}
.title{
  font-size: 36rpx;
  line-height: 60rpx;
}
.author{
  font-size: 28rpx;
  color: rgb(151,153,153);
  line-height: 60rpx;
}
.comment{
  margin-bottom: 30rpx;
  background: white; 
  padding: 30rpx;
}
.comment-wrapper{
  font-size: 32rpx;
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.comment-item{
  padding: 0 16rpx;
  line-height: 56rpx;
  border-radius: 10rpx;
  background: rgb(247,247,247);
  margin: 10rpx;
}
.comment-item:nth-child(1){
  background: rgb(255,250,221);
}
.comment-item:nth-child(2){
  background: rgb(239,250,254);
}
.comment-content{
  color: rgb(100,100,100);
  font-size: 28rpx;
  margin-right: 10rpx;
}
.comment-nums{
  font-size: 28rpx;
  color: rgb(180,180,180);
}
.summary{
  background: white; 
  padding: 30rpx;
  color: rgb(41, 41, 41);
  margin-bottom: 30rpx;
}
.summary-header,.book-message-header,.comment-header{
  text-align: center;
  font-size: 34rpx;
  margin-bottom: 20rpx;
}
.summary-wrapper{
  font-size: 28rpx;
  margin-top: 20rpx;
  line-height: 46rpx;
  text-indent: 60rpx; 
  color: rgb(102,102,102);
}
.book-message{
  background: white;
  padding: 30rpx;
}
.book-message-wrapper>view{
  display: flex;
}
.lable{
  font-size: 28rpx;
  width:20%;
  text-align: right;
  color: rgb(151,153,153);
  margin: 5rpx 0;
}
.info{
  font-size: 28rpx;
  margin: 5rpx 0;
  margin-left: 30rpx; 
  color: rgb(100,100,100)
}
.fixed{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  border-top: 2rpx solid rgb(233,233,233);
  background: white;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.input{
  display: flex;
  align-items: center;
  border: 2rpx solid black;
  padding: 10rpx 40rpx;
  border-radius: 60rpx;
  width:55%;
  font-size: 30rpx;
}
.tip{
  margin-left: 20rpx;
}
.like-wrapper{
  flex: 1;
  text-align: right;
}